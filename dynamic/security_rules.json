{
    "process_control": {
        "blocked_executables": [
            "cmd.exe",
            "powershell.exe",
            "bash.exe",
            "python.exe",
            "node.exe",
            "npm.exe",
            "wscript.exe",
            "cscript.exe",
            "reg.exe",
            "regedit.exe",
            "sc.exe",
            "mshta.exe"
        ],
        "allowed_executables": [
            "code.exe",
            "code-insiders.exe"
        ],
        "max_child_processes": 5,
        "process_timeout_seconds": 30
    },

    "resource_limits": {
        "max_memory_usage_mb": 500,
        "max_cpu_percent": 50,
        "max_disk_read_mb_sec": 100,
        "max_disk_write_mb_sec": 50,
        "max_file_handles": 100,
        "max_threads": 20
    },

    "network_security": {
        "blocked_network_ports": [
            20,
            21,
            22,
            23,
            25,
            53,
            80,
            443,
            3306,
            5432,
            8080
        ],
        "blocked_network_hosts": [
            "raw.githubusercontent.com",
            "pastebin.com",
            "ngrok.io",
            "gist.github.com",
            "paste.ee",
            "hastebin.com"
        ],
        "max_concurrent_connections": 10,
        "allowed_domains": [
            "marketplace.visualstudio.com",
            "vscode.dev",
            "github.com"
        ],
        "max_outbound_data_mb": 50,
        "require_ssl": true
    },

    "filesystem_protection": {
        "blocked_paths": [
            "C:\\Windows\\System32",
            "C:\\Windows\\SysWOW64",
            "/etc/",
            "/usr/bin",
            "/usr/local/bin",
            "%APPDATA%\\Microsoft",
            "%USERPROFILE%\\.ssh"
        ],
        "allowed_paths": [
            "%APPDATA%\\Code\\User\\extensions",
            "%USERPROFILE%\\.vscode\\extensions"
        ],
        "blocked_extensions": [
            ".exe",
            ".dll",
            ".sys",
            ".bat",
            ".cmd",
            ".ps1",
            ".msi",
            ".sh"
        ],
        "max_file_size_mb": 100,
        "max_total_size_mb": 1000
    },

    "behavior_monitoring": {
        "suspicious_patterns": {
            "registry_access": [
                "HKEY_LOCAL_MACHINE\\SOFTWARE\\Microsoft",
                "HKEY_LOCAL_MACHINE\\SYSTEM",
                "HKEY_CURRENT_USER\\Software\\Microsoft\\Windows"
            ],
            "command_patterns": [
                "wget ",
                "curl ",
                "invoke-webrequest",
                "iex ",
                "download",
                "start-process"
            ],
            "file_patterns": [
                "autorun",
                "startup",
                "system32",
                "taskkill",
                "netsh",
                "firewall"
            ]
        },
        "max_suspicious_actions": 3,
        "monitoring_interval_ms": 1000
    },

    "runtime_protection": {
        "blocked_modules": [
            "child_process",
            "crypto",
            "vm",
            "cluster",
            "dgram"
        ],
        "allowed_modules": [
            "fs",
            "path",
            "os",
            "vscode"
        ],
        "sandbox_settings": {
            "enable_sandbox": true,
            "allow_network": false,
            "allow_file_system": true,
            "max_memory": 1024,
            "max_execution_time": 5000
        }
    },

    "logging": {
        "log_level": "INFO",
        "max_log_size_mb": 10,
        "max_log_files": 5,
        "log_directory": "./logs",
        "events_to_log": [
            "process_start",
            "process_terminate",
            "file_access",
            "network_connection",
            "resource_violation",
            "security_violation"
        ]
    },

    "response_actions": {
        "on_violation": {
            "memory_exceeded": "terminate",
            "cpu_exceeded": "warning",
            "suspicious_network": "block",
            "suspicious_file": "block",
            "suspicious_process": "terminate"
        },
        "notification_settings": {
            "enable_notifications": true,
            "notify_on_violation": true,
            "notify_on_termination": true
        }
    }
}
